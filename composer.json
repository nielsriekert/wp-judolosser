{
	"name": "judolosser/website",
	"license": "MIT",
	"description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org",
			"only": [
				"wpackagist-plugin/*",
				"wpackagist-theme/*"
			]
		},
		{
			"type": "package",
			"package": {
				"name": "advanced-custom-fields/advanced-custom-fields-pro",
				"version": "5.9.1",
				"type": "wordpress-plugin",
				"dist": {
					"type": "zip",
					"url": "https://connect.advancedcustomfields.com/index.php?a=download&p=pro&k={%ACF_PRO_KEY}&t={%version}"
				},
				"require": {
					"composer/installers": "^1.4",
					"ffraenz/private-composer-installer": "^5.0"
				}
			}
		}
	],
	"require": {
		"php": ">=7.1",
		"composer/installers": "^1.8",
		"vlucas/phpdotenv": "^4.1.8",
		"oscarotero/env": "^2.1",
		"roots/bedrock-autoloader": "^1.0",
		"roots/wordpress": "^6",
		"roots/wp-config": "1.0.0",
		"roots/wp-password-bcrypt": "1.0.0",
		"advanced-custom-fields/advanced-custom-fields-pro": "^5.9",
		"wpackagist-plugin/posts-to-posts": "^1.6",
		"wpackagist-plugin/wordpress-seo": "*",
		"wpackagist-plugin/wp-smushit": "^3.7",
		"wpackagist-plugin/wp-migrate-db": "^2",
		"wpackagist-plugin/regenerate-thumbnails": "^3.1",
		"wpackagist-plugin/classic-editor": "^1.6",
		"wpackagist-plugin/custom-field-suite": "^2.6"
	},
	"require-dev": {
		"wp-cli/wp-cli-bundle": "^2.4",
		"squizlabs/php_codesniffer": "^3.5.6",
		"roave/security-advisories": "dev-master",
		"tracy/tracy": "^2.7"
	},
	"config": {
		"optimize-autoloader": true,
		"preferred-install": "dist"
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"extra": {
		"installer-paths": {
			"web/app/mu-plugins/{$name}/": [
				"type:wordpress-muplugin",
				"wpackagist-plugin/classic-editor",
				"advanced-custom-fields/advanced-custom-fields-pro",
				"wpackagist-plugin/posts-to-posts",
				"wpackagist-plugin/custom-field-suite",
				"wpackagist-plugin/regenerate-thumbnails"
			],
			"web/app/plugins/{$name}/": [
				"type:wordpress-plugin"
			],
			"web/app/themes/{$name}/": [
				"type:wordpress-theme"
			]
		},
		"wordpress-install-dir": "web/wp"
	},
	"scripts": {
		"post-root-package-install": [
			"php -r \"copy('.env.example', '.env');\""
		],
		"start": [
			"docker-compose up -d"
		],
		"test": [
			"phpcs"
		]
	}
}
